.interactive-module-wrapper
    padding 1rem 0
    display grid
    grid-template-columns 1fr 1fr

    .options
        position absolute
        right 0
        margin .5rem 1rem
        z-index 100000
        span, button
            cursor pointer
            color #fff
            font-size 1.2rem
        form 
            float left
        
    .preview
        background var(--highlight-color)
        padding .5rem

    iframe 
        border 0
        width 100%
        height 240px
        padding 1rem 0
        margin 0 !important

    .editor
        background whitesmoke
        height auto
        max-height 240px
        overflow scroll
        .hljs
            width 100vh
            height 400px
            outline none
            user-select none

a.cp
    display block
    text-align right
    margin-top .5rem



.slides
  width 100%
  height calc(100vh - 175px)
  position relative
  margin 0 auto
  overflow hidden

.slide
  position absolute
  height 100%
  width 100%
  transition all .8s
  transform translateX(-200%)
  overflow scroll
  transform-style preserve-3d

.slide.next + .slide
  transform translateX(200%)

.slide.prev
  z-index 10
  transform rotate(15deg) scale(0.4) translateY(-100%)
  opacity 0

.slide.current
  z-index 10
  transform translateX(0)

.slide.next
  z-index 10
  opacity 1

.controls
  position fixed
  bottom 0
  padding 10px 0
  z-index 1000

.controls a.button,
.controls button,
.controls input[type="button"]
  color var(--highlight-color)
  border 0
  padding 0 40px 0 10px
  text-decoration none
  font-weight 800
  font-size 24px

.stepwizard
  list-style-type none
  display flex
  padding-bottom 1rem
  margin 0
  counter-reset step

.stepwizard-step
  flex 1
  text-align center
  position relative

.stepwizard-step:before
  content counter(step)
  counter-increment step
  width 1.6rem
  height 1.6rem
  border-radius 50%
  background-color #eee
  color #000
  line-height 1.6rem
  margin 0 auto
  display block
  position relative
  z-index 2

.stepwizard-step:not(:first-child):after
  content ''
  top 12px
  content ''
  width 100%
  height 2px
  background-color #eee
  position absolute
  left -50%

.stepwizard-step.active:before
  background-color var(--highlight-color)
  color #fff

.stepwizard-step.active:after
  background-color var(--highlight-color)


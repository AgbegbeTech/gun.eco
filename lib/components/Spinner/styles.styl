.spinner
    position absolute
    top 45%
    left 45%
    z-index 100000
    height 60px
    width 60px
    transform translate(-50%, -50%)
    animation rotate 0.8s infinite linear
    border 4px solid var(--highlight-color)
    border-right-color transparent
    border-radius 50%

@keyframes rotate
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)

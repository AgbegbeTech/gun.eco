
:root
  --background-color #292929
  --highlight-color #03A9F4
  --text-color #ffffff82
  --menu-width 280px
  --font-size 16px

*, *:before, *:after
    box-sizing border-box
    margin 0
    padding 0

body *, html *
  box-sizing border-box

body
    user-select auto
    background var(--background-color)
    color var(--text-color)

ul li
    list-style none
    user-select none
    cursor default
ol
    padding 1rem
a
    text-decoration none
p
    margin-top .5rem
hr
    margin 1rem 0

a:hover
    color gray

a:link
    text-decoration none

textarea, input[type]
    outline none

input[type="text"]:focus
    outline none

input:-webkit-autofill
    box-shadow 0 0 0 30px white inset
    -webkit-text-fill-color gray !important

textarea[type="text"]:focus
    outline none

iframe
    border 0
    margin .8rem 0

input[type="text"]:focus
    outline none

input[type="submit"]:focus
    outline none

input[type="search"]:focus
    outline none

select:focus
    outline none

textarea[type="text"]:focus
    outline none

::-webkit-scrollbar
    display none

::-moz-placeholder
    color #d8d7d7

::-webkit-input-placeholder
    color #d8d7d7

::selection
   background #39f
   color #fff
   text-shadow none

::-webkit-scrollbar
    display none

input, textarea, select
    appearance none
select
    background #fff
    border-radius 0
input
select
    border 0

blockquote
    padding 0 1rem
    margin 1rem 0
    color #666
    border-left 0.25em solid #ddd
    p
        display block
        padding 0
        color #ffffff6b

table
    margin 1rem 0

pre
    width 100%
    margin .5rem 0 1rem 0
    padding 1rem
    font-size .88rem
    color #333333
    background #f5f5f5
    counter-reset line
    overflow-x scroll

.hljs
    display block
    position relative
    padding: 0 !important
    background #f5f5f5 !important

.hljs-deletion
    background #f0f0f0 !important
    color #4f4f4f

h1
    font-size 1.2rem
h2
    font-size 1.4rem

h1, h2, h3, h4
    margin 1rem 0 .5rem 0

.hide
    display none

.fadein
    opacity 1
    transition opacity .25s ease-in-out

.fadeout
    opacity 0
    height 0
    padding 0 8px
    overflow hidden
    transition all .3s ease .15s

.select-style
    padding 0
    margin 0
    overflow hidden
    background-color #fff
    select
        padding 5px 8px
        font-size 1rem
        color #989898
        width calc(100% - 32px)
        border none
        box-shadow: none
        background-color transparent
        background-image none
        appearance none
    select:focus 
        outline none

textarea:focus, input:focus
    outline none

button
    background transparent

button:focus, input:focus
    outline none

table
    display block
    width 100%
    overflow auto
    word-break normal
    word-break keep-all

table p, table blockquote, table ul, table ol, table dl, table table, table pre
    margin-top 0
    margin-bottom 1rem

table
    border-spacing 0
    border-collapse collapse

table
    display table
    border-collapse separate
    border-spacing .5rem
    border-color grey

table th, table td
    padding .5rem 1rem
    border 1px solid var(--highlight-color)
